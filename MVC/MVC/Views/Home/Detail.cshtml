@model User
@inject MVC.Interface.IUserRepository user
@inject MVC.Interface.ICourseRepository course
@inject MVC.Data.MVC_Context context

@using MVC.Wrapper;

@{
    ViewData["Title"] = "Detail";
    var session = new MySession(Context.Session);
    User sessionUser = session.GetUser();
}

<body>
    <h1>Enrolled courses</h1>
    @*<h1>@user.LoggedinUser().Id</h1>*@
    <h1>@sessionUser.Id</h1>
    <h2>Sanyika</h2>

    <div>
        <form asp-action="Clear" asp-controller="Home">
            <button class="button" type="submit">
                ClearSession
            </button>
        </form>

        <table class="table table-hover" style=" width:100%">
            <tr>
                <th><d><p1>#</p1></d></th>
                <th><d><p1>Name</p1></d></th>
                <th><d><p1>Description</p1></d></th>
                <th><d><p1>Progress in percentage</p1></d></th>
                <th></th>
            </tr>
            @foreach (var item in user.GetCoursesList(@sessionUser.Id))
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.ProgressInPercentage</td>

                    <td>
                        <form method="post" asp-controller="Course" asp-action="Edit" asp-route-id="@item.Id">
                            <button class="button" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                                </svg>
                            </button>
                        </form>
                        <form method="post" asp-controller="Course" asp-action="Delete" asp-route-id="@item.Id">
                            <button class="button" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                                </svg>
                            </button>
                        </form>
                        <a asp-controller="Course" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Detail</a>
                    </td>
                </tr>
            }
        </table>
        <div class="center">
            <form method="get" asp-action="AddCourse" asp-route-user="@sessionUser">
                <button class="button"><p style="color: blue"><u>+Add Course</u></p></button>
            </form>
        </div>
    </div>

    <h1>Users skills</h1>
    <div>
        <table class="table table-hover" style=" width:100%">
            <tr>
                <th><d><p1>#</p1></d></th>
                <th><d><p1>Name</p1></d></th>
                <th><d><p1>Skill level</p1></d></th>
                <th></th>
            </tr>

            @foreach (var item in user.GetUsersSkills(sessionUser.Id))
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.SkillLevel</td>

                    <td>
                        <form method="post" asp-action="Edit" asp-route-id="@item.Id" asp-controller="Skill">
                            <button class="button" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                                </svg>
                            </button>
                        </form>
                        <form method="get" asp-action="Delete" asp-route-id="@item.Id" asp-controller="Skill">
                            <button class="button" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                                </svg>
                            </button>
                        </form>
                        <a asp-controller="Course" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Detail</a>
                    </td>
                </tr>
            }
        </table>
    </div>

    <h1>Users materials</h1>

    <div>
        <table class="table table-hover" style=" width:100%">
            <tr>
                <th><d><p1>#</p1></d></th>
                <th><d><p1>Name</p1></d></th>
                <th><d><p1>Author</p1></d></th>
                <th><d><p1>Number of pages</p1></d></th>
                <th><d><p1>Year of publication</p1></d></th>
                <th><d><p1>Format</p1></d></th>
                <th><d><p1>Date of publication</p1></d></th>
                <th><d><p1>Type of datacarrier</p1></d></th>
                <th><d><p1>Quality</p1></d></th>
                <th><d><p1>Duration</p1></d></th>
                <th><d><p1>CourseId</p1></d></th>
                <th></th>
            </tr>

            @foreach (var item in user.GetUsersMaterials(@sessionUser.Id))
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Author</td>
                    <td>@item.NumberOgpages</td>
                    <td>@item.YearOfPublication</td>
                    <td>@item.Format</td>
                    <td>@item.DateOfPublication</td>
                    <td>@item.TypeOfDatacarrier</td>
                    <td>@item.Duration</td>
                    <td>@item.Quality</td>
                    <td>@item.CourseId</td>

                    <td>
                        <form method="post" asp-action="Edit" asp-route-id="@item.Id" asp-controller="Material">
                            <button class="button" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                                </svg>
                            </button>
                        </form>
                        <form method="post" asp-action="Delete" asp-route-id="@item.Id" asp-controller="Material">
                            <button class="button" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                                </svg>
                            </button>
                        </form>
                        <a asp-controller="Course" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Detail</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>

