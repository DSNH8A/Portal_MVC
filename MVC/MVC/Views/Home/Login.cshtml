    }

    *{
    box-sizing : border-box;
    font-family : cursive;
    }

    .container
    {
    background-color :  white;
    border-radius:  30px;
    overflow : hidden;
    position : relative;
    box-shadow : 0 5px 5px red;
    width : 750px;
    max-width: 100%;
    min-height: 450px;
    height : 100%;
    }

    .container p
    {
    font-size: 16px;
    line-height : 20px;
    margin: 20px;
    cursor : pointer;
    }

    .container span
    {
    font-size : 14px;
    padding : 10px;
    }

    .container a
    {
    background-color : white;
    color :black;
    border-radius : 10px;
    justify-content : center;
    align-items : center;
    height : 50px;
    width : 100px;
    margin-top : 10px;
    cursor : pointer;
    text-transform: uppercase; 
    }

    .container-button-hidden
    {
    background-color: transparent; 
    border-color : white;
    border-radius : 10px;
    width: 100px;
    color: white;
    }

    .container form
    {
    background-color: white;
    align-items: center;
    justify-content : center;
    display: flex;
    flex-direction : column;
    padding : 0 40px;
    }

    .container input
    {
    background-color: #eee;
    border: none;
    margin: 4px 0;
    padding : 10px 15px;
    border-radius : 10px;
    outline : none;
    width: 100%;
    }

    .container form button
    {
    border-radius: 10px;
    width : 100px;
    }

    .form-container
    {
    position: absolute;
    top : 0;
    height : 100%;
    transition: all 0.6s ease-in-out;
    }
    .sign-in
    {
    left : 0;
    z-index : 2;
    width : 50%;
    }

    .sign-up {
    left: 0;
    width: 50%;
    opacity: 0;
    z-index: 1;
    }

    .toggle-container {
    position: absolute;
    top: 0;
    left: 50%;
    width: 50%;
    height: 100%;
    overflow: hidden;
    transition: all 0.6s ease-in-out;
    z-index: 1000;
    border-radius: 150px 0 0 100px;
    }

    .toggle {
    background-color: black;
    height: 100%;
    background: linear-gradient(to right, white, black);
    color: white;
    position: relative;
    left: -100%;
    height: 100%;
    width: 200%;
    transform: translateX(0);
    transition: all 0.6s ease-in-out;
    }

    .toggle-panel {
    position: absolute;
    width: 50%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    padding: 0 30px;
    text-align: center;
    top: 0;
    transform: translateX(0);
    transition: all 0.6s ease-in-out;
    }

    .toggle-left {
    transform: translateX(-200%);
    }

    /*welcome back*/
    .toggle-right {
    right: 0;
    transform: translateX(0);
    }

    /*--------Active---------*/

    .sign-in.active
    {
    transform : translateX(100%);
    opacity : 0;
    z-index :1
    }

    .sign-up.active
    {
    transform : translateX(100%);
    opacity : 1;
    z-index : 3;
    }

    .toggle-container.active
    {
    transform : translateX(-100%);
    transition: all 0.6s ease-in-out;
    width: 100%;
    }

    .toggle-left.active
    {
    opacity : 1;
    transform: translateX(125%);
    z-index : 3;
    }

    .toggle-right.active 
    {
    opacity: 0;
    }

</style>

