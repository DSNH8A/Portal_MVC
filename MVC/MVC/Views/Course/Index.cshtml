@model IEnumerable<Course>
@inject MVC.Interface.ICourseRepository course

@using MVC.Wrapper;

@{
    MySession session = new MySession(Context.Session);
    User user = session.GetUser();
}

<style>
    body
    {
        font-family :cursive;
    }


    .image
    {
        /*object-fit : fill;*/
        width : 100%;
        height : 150px;
    }

   .grid-container
   {
       box-sizing : border-box;
       display : grid;
       grid-template-columns : auto, auto, auto;
       /*gap : 1rem;*/
       align-items : center;
       justify-items : center;
       width : 100%;
       column-gap: 10px;

   }

   .griditem
   {
        background-color: white;
        border-radius : 10px;
        border: 1px solid rgba(0, 0, 0, 0.8);
        /*padding: 20px;*/
        font-size: 16px;
        /*margin : 10px;*/
        text-align: center;
       /* display : flex;
        flex-wrap : wrap;*/
        cursor : pointer;
   }

   .row
   {
       display : flex;
       flex-wrap : wrap;
   }

   .paragraph
   {
       text-anchor : middle;
   }

   .button-container
   {
       display : flex;
       align-items : start;
       justify-content : flex-start;
       margin-left : 20px;
   }

   .button
   {
       vertical-align : middle;
       position : relative;
       display : inline-flex;
       margin : 10px;
   }

   .description
   {
       display : flex;
       justify-content : flex-start;
       font-size : 15px;
       margin-left : 10px;
   }

   .sanyika
   {
       margin-top : 20px;
   }

</style>

<body>
   @* <h1>Courses Page</h1>
