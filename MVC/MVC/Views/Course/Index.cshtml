                        <td><a asp-controller="Course" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Detail</a></td>
                    }
                </tr>
            }
        </table>
        @if (user != null)
        {
            <div class="center">
                <form method="post" asp-action="Create">
                    <button class="button"><p style="color: blue"><u>+Add Course</u></p></button>
                </form>
            </div>
        }
    </div>*@
   <div class="grid-container center">
        
        <div class="row row-cols-1 row-cols-2 row-cols-3">
            @foreach (var item in course.GetAllList())
            {
                <div class="col sanyika">
                    <div class="griditem">
                        @if (item.Image != null)
                        {
                            <img class="image" src="@item.Image"></img>
                        }
                        else
                        {
                            <img class="image" src="~/effect.jpg" height="200px"></img>
                        }
                        <p class="paragraph">@item.Name</p>
                        <div class="description">
                            @item.Description
                        </div>
                        <div class="button-container">
                            <form asp-controller="Course" asp-action="Detail" asp-route-id="@item.Id" class="button">
                                <button class="btn btn-sm btn-outline-dark" type="submit">
                                    Detail
                                </button>
                            </form>
                            <form asp-controller="Course" asp-action="Edit" asp-route-id="@item.Id" method="post" class="button">
                                <button class="btn btn-sm btn-outline-dark" type="submit">
                                    Edit
                                </button>
                            </form>
                          
                        </div>
                    </div>
                </div>
            }
       </div>
   </div>
</body>
