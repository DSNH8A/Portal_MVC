@model Course
@inject MVC.Data.MVC_Context context
@inject MVC.Interface.ICourseRepository course
@inject MVC.Interface.ISkillRepository skill

@{
    List<Course> courses = course.GetAllList();
}

<style>

    .container
    {
        justify-content: center;
        align-items : center;
        width: 500px;
        height : 500px;
        background-color : white; 
        border-radius : 20px;
        display : flex;
        flex-wrap : wrap;
    }
    
    .box
    {
        box-sizing : border-box;
    }

    .content
    {
        margin-top: 10px;
        margin-bottom : 10px;
        margin-left : 50px;
        display : flex;
    }

    .mid
    {
        display : flex;
        align-items : center;
        justify-content : center;
    }

    .button
    {
        margin : 10px;
    }

</style>

<body>
    <div class="container">
        <h1>Add Course</h1>
        <div class="box">
            <form method="post" asp-action="Add" asp-route-courses="@course" enctype="multipart/form-data">
                <div class="content">
                    <label for="name">Name:</label>
                </div>
                <div class="mid">
                    <input type="text" asp-for="Name" />
                </div>
                <div class="content">
                    <label for="name">Description:</label>
                </div>
                <div class="mid">
                    <input type="text" asp-for="Description" />
                </div>
                <div class="content">
                    <label for="image">Image:</label>
                </div>
                <div class="mid">
                    <input type="file" asp-for="Image"></input>
                </div>
                <div class= "mid button">
                    <button type="submit" class="btn-primary">
                        Add Course
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>